<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis-org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="repository.mapper.emailMapper">
	<cache></cache>
	<select id="selectByEmailAndName" parameterType="Email">
		select MEMBER_EMAIL
		<where>
			MEMBER_NAME=#{receiver} and MEMBER_EMAIL=#{forName}
		</where>
	</select>
	<update id="updatePw" parameterType="String">
		update MEMBER 
		<set>
		MEMBER_PASS=#{memberPass}
		</set>
		<where>
		MEMBER_EMAIL=#{memberEmail} and MEMBER_NAME=#{memberName}
		</where>
	</update>
</mapper>